{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
    "*": [
      "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*", 
    "src/server.ts",
    "src/typings"
],
  "exclude": [
    "test/**/*.ts"
  ]
}
